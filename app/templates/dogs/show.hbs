{{title model.name}}

<div class="row">
  <div class="col-md-12">
    <h2>{{model.name}}</h2>
    <hr />
  </div>
</div>


<div class="row">
  <div class="col-md-6">
    <img src="{{model.image_url}}" alt="{{model.name}}" class="dog-image"/>

  </div>

  <div class="col-md-6">
    {{{format-text model.description}}}

    <p><strong>Shelter:</strong> {{link-to model.shelter.name 'shelters.show' model.shelter}}</p>
    <p><strong>Breed:</strong> {{link-to model.breed.name 'breeds.show' model.breed}}</p>
    <hr />

    {{dog-shelter-button dog=model}}
  </div>

</div>
<hr />

{{dog-dl-list dog=model}}











