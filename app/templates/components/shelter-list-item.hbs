<div class="row">
  <div class="col-md-4">
    <img src="{{shelter.image_url}}" alt="{{shetler.name}}" class="shelter-image"/>
  </div>

  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">{{#link-to "shelters.show" shelter}}{{shelter.name}}{{/link-to}}</h3>
      </div>

      <div class="panel-body">
        {{{format-text shelter.description}}}
      </div>
      <div class="panel-footer">
        {{#link-to "shelters.show" shelter class="btn btn-sm btn-primary"}}View all information{{/link-to}}
      </div>

    </div>
  </div>

</div>
